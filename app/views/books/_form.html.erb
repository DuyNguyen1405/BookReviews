<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
    <%= f.input :title, label: "Book Title" %>
    <%= f.input :description %>
    <%= f.input :author %>
    <b>Book's Cover:</b><%= f.file_field :book_img %>
    <%= simple_format "\n" %>
    <b>Book's Category:</b>
    <%= simple_format "\n" %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
    <%= simple_format "\n" %>
    <%= f.button :submit %>
<% end %>